<% content_for :cover do %>
  <div class="cover">
    <div class="cover-inner">
      <div class="cover-contents">
        <h1>コースマッチで受講者を確認しよう</h1>
          <% unless logged_in? %>
            <%= link_to '新規登録', signup_path, class: 'btn btn-success btn-lg' %>
          <% end %>
      </div>
    </div>
  </div>
<% end %>

<% if logged_in? %>
  <%= render 'courses/courses', courses: @courses %>
<% end %>
